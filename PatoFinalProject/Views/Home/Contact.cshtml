@model PatoFinalProject.ViewModel.ContactViewModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";

}
@section Contactstyle{
    <link rel="stylesheet" href="~/Public/css/contactcss/contactstyle.css">
  
}
<div class="container-fluid main-header-img text-center">
    <div class="row before-img">
        <div class="col-md-4"></div>
        <div class="col-md-4 main-header-img-title"><h1>@PatoFinalProject.Resource.Contact</h1></div>
        <div class="col-md-4"></div>
    </div>
</div>
<!-- Header Bottom Area End -->
<!-- Main Area Start -->
<!-- Map Section -->
<section>
    <div class="container">
        <div class="row mt-5"></div>
        <div class="row">

            <div class="col-md-12 col-12">

                <div class="map-div">
                    <iframe src="https://www.google.com/maps/embed?pb=" class="mapsetting"
                            frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
        <div class="row mt-5"></div>
    </div>
</section>
<!-- Map Section -->
<!-- Form Section Start -->
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <h2>@PatoFinalProject.Resource.SendMsg</h2>
            </div>
            <div class="col-md-4"></div>
        </div>
        @using (Html.BeginForm("ContactCreate", "Home", FormMethod.Post, new { @class = "mt-5",@id="client" }))
        {

            <div class="row">
                <div class="col-md-1 col-12"></div>
                <div class="col-md-3 col-12 form-group">
                    @Html.LabelFor(m => m.contactFormSingle.Name, new { @class = "ml-3" })
                    @Html.TextBoxFor(m => m.contactFormSingle.Name, new { type = "text", @class = "form-control ml-3", placeholder = "Name", @id = "contactNameinput", required = "required" })
                </div>
                <div class="col-md-3 col-12 form-group">
                    @Html.LabelFor(m => m.contactFormSingle.Email, new { @class = "ml-3" })
                    @Html.TextBoxFor(m => m.contactFormSingle.Email, new { type = "email", @class = "form-control ml-3", placeholder = "xxxx@xxxx.xxx", @id = "contactEmailinput", required = "required" })
                </div>
                <div class="col-md-3 col-12 form-group">
                    @Html.LabelFor(m => m.contactFormSingle.Phone, new { @class = "ml-3" })
                    @Html.TextBoxFor(m => m.contactFormSingle.Phone, new { type = "text", @class = "form-control ml-3", placeholder = "+994 xxx xx xx", @id = "contactPhoneinput", required = "required" })
                </div>

                <div class="col-md-1 col-12"></div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-9 col-12">
                    @Html.LabelFor(m => m.contactFormSingle.Description, new { @class = "ml-3 mt-2" })
                    @Html.TextAreaFor(m => m.contactFormSingle.Description, new { @class = "form-control ml-3", @id = "exampleFormControlTextarea1", rows = "7", placeholder = "Message", required = "required" })
                    <div class="text-center ml-4">
                      
                        <button type="submit" class="btn-form-submit btn-dark mt-4 ml-3" onclick="return ContactFormFunction()">@PatoFinalProject.Resource.SubmitForm</button>
                    </div>
                </div>
            </div>

        }
        <div class="row mt- mb-5"></div>
        <div class="row mt- mb-5"></div>
    </div>
</section>
<!-- Information Area -->
<div class="container">
    <div class="row">
        <div class="col-md-1 col-12"></div>
        <div class="col-md-3 col-12">
            <h3> <i class="fas fa-map-marker-alt"></i><span>@PatoFinalProject.Resource.Location</span></h3>
            <address>
                8th floor, 379 Hudson St, New York, NY 10018
            </address>
        </div>
        <div class="col-md-1 col-12"></div>
        <div class="col-md-3 col-12">
            <h3> <i class="fas fa-phone-alt"></i><span>@PatoFinalProject.Resource.CallUs</span></h3>
            <p>(+1) 96 716 6879</p>
        </div>
        <div class="col-md-3 col-12">
            <h3> <i class="far fa-clock"></i><span>@PatoFinalProject.Resource.OpeningHour</span></h3>
            <p>
                09:30 AM – 11:00 PM
                Every Day
            </p>
        </div>
    </div>
    <div class="row mt- mb-5"></div>
    <div class="row mt- mb-5"></div>
</div>

<!-- Information Area End -->
<!-- Form Section End -->
<!-- Main Area End -->