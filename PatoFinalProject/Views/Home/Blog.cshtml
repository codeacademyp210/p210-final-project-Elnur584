@model PatoFinalProject.ViewModel.BlogViewModel
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}
@section Blogstyle{
    <link rel="stylesheet" href="~/Public/css/blogcss/blogstyle.css">
}
<div class="container-fluid main-header-img text-center">
    <div class="row before-img">
        <div class="col-md-4"></div>
        <div class="col-md-4 main-header-img-title"><h1>Blog</h1></div>
        <div class="col-md-4"></div>
    </div>
</div>
<!-- Header Bottom Area End -->
<!-- Main Area Start -->
<main>
    <section class="large-area">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-1 col-12"></div>
                <div class="col-md-2 mt-4">
                    <a href="#" class="allanchor">
                        @PatoFinalProject.Resource.Home /
                    </a><span class="text-muted"> BLOG</span>
                </div>
            </div>
            <div class="row mt-5"></div>
            <div class="row blog-area-border">
                <div class="col-md-1"></div>
                <div class="col-md-7">
                    @foreach (var blogMainPhotos in Model.BlogPhotoAreas)
                    {
                        <div>
                            <div class="around-img-div mt-5">
                                <div class="date-on-img d-flex flex-column ml-4 mt-4 pb-4 pt-3 pr-2 pl-2 text-center">
                                    <span>28</span>
                                    <span>Dec,2018</span>
                                </div>
                                <img src="~/Public/images/@blogMainPhotos.Image" alt="" class="blog-large-img">
                            </div>
                            <div>
                                <h2 class="mt-4 display-5 large-img-area-title-h2">@blogMainPhotos.Title</h2>
                                <span class="mt-2 large-img-area-span">
                                     @blogMainPhotos.Information
                                </span>
                                <p class="mt-5">
                                    @blogMainPhotos.Content
                                </p>
                                <a href="#" class="allanchor large-img-area-anchor">
                                    CONTINUE READING <i class="fas fa-long-arrow-alt-right"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-1 col-12"></div>
                <div class="col-md-3 col-12 small-area-border pl-4">
                    <div>
                        <div class="d-flex flex-row mt-5">
                            <input type="text" placeholder="Search">
                            <button type="submit" class="btn btn-dark search-btn">@PatoFinalProject.Resource.Search</button>
                        </div>
                        <div class="d-flex flex-column mt-5">
                            <h2 class="categories-lef-area pb-4">@PatoFinalProject.Resource.Categories</h2>
                            <a href="#" class="allanchor anchor-border pb-2 pt-2">COOKING RECIPE</a>
                            <a href="#" class="allanchor anchor-border pb-2 pt-2">DELICIOUS FOODS</a>
                            <a href="#" class="allanchor anchor-border pb-2 pt-2">EVENTS DESIGN</a>
                            <a href="#" class="allanchor anchor-border pb-2 pt-2">RESTAURANT PLACE</a>
                            <a href="#"
                               class="allanchor anchor-border pb-2 pt-2 end-categories-border">WORDPRESS</a>
                        </div>
                        <div>
                            <h2 class="categories-lef-area pb-4 mt-5">@PatoFinalProject.Resource.MostPopular</h2>
                            @foreach (var blogMostpopular in Model.BlogMostPopulars)
                            {
                                <div class="d-flex flex-row mt-2">
                                    <div class="around-small-img mt-2">
                                        <img src="~/Public/images/@blogMostpopular.Image" class="small-img" alt="">
                                    </div>
                                    <div class=" ml-3">
                                        <a href="#" class="allanchor small-img-anchor">@blogMostpopular.Title</a>
                                        <p>@blogMostpopular.BlogTime</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div>
                            <div class="mt-5">
                                <h2 class="categories-lef-area pb-4">@PatoFinalProject.Resource.Archive</h2>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        JULY 2018
                                    </a><span class="mr-5">(9)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        JUNE 2018

                                    </a><span class="mr-5">(39)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        MAY 2018

                                    </a><span class="mr-5">(29)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        APRIL 2018
                                    </a><span class="mr-5">(26)</span>

                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        MARCH 2018

                                    </a><span class="mr-5">(35)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        FEBRUARY 2018

                                    </a><span class="mr-5">(22)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        JANUARY 2018

                                    </a><span class="mr-5">(32)</span>
                                </div>
                                <div class="d-flex flex-row justify-content-between mt-2 archive-span-size">
                                    <a href="#" class="allanchor date-anchor-left-area">
                                        DECEMBER 2017


                                    </a><span class="mr-5">(21)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-1 col-12"></div>
                <div class="col-md-1 col-12 pagination-area d-flex flex-row">
                    <a class="allanchor" href="#"><p>1</p></a>
                    <a class="allanchor" href="#">  <p class="ml-2">2</p></a>

                </div>
                <div class="col-md-10 col-12"></div>
            </div>
        </div>
    </section>
</main>
<!-- Main Area End -->
