@model PatoFinalProject.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@section indexstyle{
    <link rel="stylesheet" href="~/Public/css/homecss/Style.css">
    <link rel="stylesheet" href="~/Public/css/homecss/mainStyle.css">
    <link rel="stylesheet" href="~/Public/css/homecss/ResponsiveGrid.css">
    <link rel="stylesheet" href="~/Public/css/homecss/stylevideo.css">
    <link href='https://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Public/css/homecss/normalize.css">
    <link href="~/Public/css/homecss/custom.css" rel="stylesheet">
}

<article>
    <div class="container-fluid">
        <!-- Nav Area Start -->
        <!-- Nav Area End-->
        <div class="row">
            <div class="col-md-2 col-12"></div>
            <div class="col-md-8 col-12 text-center mt-5 pt-5 pato-area-margin">
