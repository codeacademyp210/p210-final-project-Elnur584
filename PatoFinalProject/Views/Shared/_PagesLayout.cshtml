        <ul class="menu menu-list">
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" id="active"><i class="fas fa-home mr-2 nav-rotate-icon"></i><a href="@Url.Action("Index","Home")" class="active">@PatoFinalProject.Resource.Home</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Menu" ? "active" : "")"><i class="fas fa-concierge-bell mr-2 nav-rotate-icon"></i><a href="@Url.Action("Menu","Home")">Menu</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Reservation" ? "active" : "")"><i class="far fa-list-alt mr-2 nav-rotate-icon"></i><a href="@Url.Action("Reservation","Home")">@PatoFinalProject.Resource.Menureserv</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Gallery" ? "active" : "")"><i class="fas fa-image mr-2 nav-rotate-icon"></i><a href="@Url.Action("Gallery","Home")">@PatoFinalProject.Resource.Gallery</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "AboutUs" ? "active" : "")"><i class="fas fa-info-circle mr-2 nav-rotate-icon"></i><a href="@Url.Action("AboutUs","Home")">@PatoFinalProject.Resource.About</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Blog" ? "active" : "")"><i class="fab fa-blogger-b mr-2 nav-rotate-icon"></i><a href="@Url.Action("Blog","Home")">Blog</a></li>
            <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")"><i class="fas fa-address-book mr-2 nav-rotate-icon"></i><a href="@Url.Action("Contact","Home")">@PatoFinalProject.Resource.Cont</a></li>
        </ul>

    </header>
