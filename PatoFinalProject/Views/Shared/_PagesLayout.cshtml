                <div class="col-md-2 col-12">

                </div>
                <div class="col-md-8 col-12"></div>
                <div class="col-md-2 col-12 text-center ml-0">
                    <ul class="header-line-ul">
                        <li lang="az" class="font-weight-bold text-white-50">
                            @foreach (var lang in PatoFinalProject.LanguageMang.AvailableLanguages)
                            {
                                @Html.ActionLink(lang.LanguageFullName, "ChangeLanguage", "Home", new { lang = lang.LanguageCultureName }, null)
                            }
                        </li>
                    </ul>
                </div>
            </div>
