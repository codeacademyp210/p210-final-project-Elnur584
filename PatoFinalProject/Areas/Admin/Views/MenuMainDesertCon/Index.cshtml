@model PatoFinalProject.Areas.ViewModel.MenuMainDesertVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content" style="z-index:-10;">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm(Model.Action, "MenuMainDesertCon", FormMethod.Post))
                    {


                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.FoodKind)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.FoodKind, new { @class = "form-control", placeholder = "Title" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food1Name)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food1Name, new { @class = "form-control", placeholder = "Food Name" })
                        </div>

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food1Price)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food1Price, new { @class = "form-control", placeholder = "Example: 00.00$" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food1Description)
                            @Html.TextAreaFor(m => m.menuMainDesertSingle.Food1Description, new { @class = "form-control", @id = "text-editor", @cols = 80, @rows = 10 })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food2Name)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food2Name, new { @class = "form-control", placeholder = "Food Name" })
                        </div>

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food2Price)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food2Price, new { @class = "form-control", placeholder = "Example: 00.00$" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food2Description)
                            @Html.TextAreaFor(m => m.menuMainDesertSingle.Food2Description, new { @class = "form-control", @id = "text-editor", @cols = 80, @rows = 10 })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food3Name)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food3Name, new { @class = "form-control", placeholder = "Food Name" })
                        </div>

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food3Price)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food3Price, new { @class = "form-control", placeholder = "Example: 00.00$" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food3Description)
                            @Html.TextAreaFor(m => m.menuMainDesertSingle.Food3Description, new { @class = "form-control", @id = "text-editor", @cols = 80, @rows = 10 })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food4Name)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food4Name, new { @class = "form-control", placeholder = "Food Name" })
                        </div>

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food4Price)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food4Price, new { @class = "form-control", placeholder = "Example: 00.00$" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food4Description)
                            @Html.TextAreaFor(m => m.menuMainDesertSingle.Food4Description, new { @class = "form-control", @id = "text-editor", @cols = 80, @rows = 10 })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food5Name)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food5Name, new { @class = "form-control", placeholder = "Food Name" })
                        </div>

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food5Price)
                            @Html.TextBoxFor(m => m.menuMainDesertSingle.Food5Price, new { @class = "form-control", placeholder = "Example: 00.00$" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.menuMainDesertSingle.Food5Description)
                            @Html.TextAreaFor(m => m.menuMainDesertSingle.Food5Description, new { @class = "form-control", @id = "text-editor", @cols = 80, @rows = 10 })
                        </div>
                        @Html.HiddenFor(m => m.menuMainDesertSingle.Id)
                        <button type="submit" class="btn btn-info mt-4 ml-3">Submit</button>
                    }
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <table class="table table-hover table-dark" style="overflow-x:scroll;">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">FirstFoodName</th>
                                <th scope="col">FirstFoodPrice</th>
                                <th scope="col">FirstFoodContent</th>
                                <th scope="col">SecondFoodName</th>
                                <th scope="col">SecondFoodPrice</th>
                                <th scope="col">SecondFoodContent</th>
                                <th scope="col">ThirdFoodName</th>
                                <th scope="col">ThirdFoodPrice</th>
                                <th scope="col">ThirdFoodContent</th>
                                <th scope="col">FourthFoodName</th>
                                <th scope="col">FourthFoodPrice</th>
                                <th scope="col">FourthFoodContent</th>
                                <th scope="col">FifthFoodName</th>
                                <th scope="col">FifthFoodPrice</th>
                                <th scope="col">FifthFoodContent</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model.menuMainDesertsList)
                                {

                            <tr>
                                <td>@item.FoodKind</td>
                                <td>@item.Food1Name</td>
                                <td>@item.Food1Price</td>
                                <td>@item.Food1Description</td>
                                <td>@item.Food2Name</td>
                                <td>@item.Food2Price</td>
                                <td>@item.Food2Description</td>
                                <td>@item.Food3Name</td>
                                <td>@item.Food3Price</td>
                                <td>@item.Food3Description</td>
                                <td>@item.Food4Name</td>
                                <td>@item.Food4Price</td>
                                <td>@item.Food4Description</td>
                                <td>@item.Food5Name</td>
                                <td>@item.Food5Price</td>
                                <td>@item.Food5Description</td>
                                <td><a href=@Url.Action("Edit",new { id=item.Id}) class="btn btn-info">Edit</a></td>
                                <td><a href=@Url.Action("Delete","MenuMainDesertCon",new { id=item.Id}) class="btn btn-info">Delete</a></td>
                            </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
