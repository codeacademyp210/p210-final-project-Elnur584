@model PatoFinalProject.Areas.ViewModel.BlogMostPopularVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- MAIN CONTENT -->
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm(Model.Action, "BlogMostPopularCon", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.blogMostPopularSingle.ImgFile, new { @class = "mr-1" })
                            @Html.TextBoxFor(m => m.blogMostPopularSingle.ImgFile, new { @id = "imageFile", type = "file", required = "required", @class = "mr-1" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.blogMostPopularSingle.Title)
                            @Html.TextBoxFor(m => m.blogMostPopularSingle.Title, new { @class = "form-control", placeholder = "Title" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.blogMostPopularSingle.BlogTime)
                            @Html.TextBoxFor(m => m.blogMostPopularSingle.BlogTime, new { @class = "form-control", placeholder = "Example: 09:00" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.blogMostPopularSingle.Image)
                            @Html.TextBoxFor(m => m.blogMostPopularSingle.Image, new { @class = "form-control", placeholder = "Example: Image.jpg" })
                        </div>

                        @Html.HiddenFor(m => m.blogMostPopularSingle.Id)
                        <button type="submit" class="btn btn-info mt-4 ml-3">Submit</button>
                    }
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <table class="table table-hover table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Title</th>
                                <th scope="col">Image</th>
                                <th scope="col">BlogTime</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>

                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model.blogMostPopularsList)
                                {

                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Image</td>
                                <td>@item.BlogTime</td>
                                <td><a href=@Url.Action("Edit",new { id=item.Id}) class="btn btn-info">Edit</a></td>
                                <td><a href=@Url.Action("Delete","BlogMostPopularCon",new { id=item.Id}) class="btn btn-info">Delete</a></td>
                            </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


