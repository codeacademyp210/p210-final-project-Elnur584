@model PatoFinalProject.Areas.ViewModel.ReservationFormVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- MAIN CONTENT -->
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm(Model.Action, "ReservationFormCon", FormMethod.Post))
                    {


                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservDate)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservDate, new { @class = "form-control", placeholder = "dd/mm/yyyy" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservTime)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservTime, new { @class = "form-control", placeholder = "00:00 AM" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservPeople)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservPeople, new { @class = "form-control", placeholder = "People Count" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservPhone)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservPhone, new { @class = "form-control", placeholder = "+xxx xx xxx xx xx" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservName)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservName, new { @class = "form-control", placeholder = "Enter Name" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.reservationFormSingle.ReservEmail)
                            @Html.TextBoxFor(m => m.reservationFormSingle.ReservEmail, new { @class = "form-control", placeholder = "xxx@xxx.xxx" })
                        </div>

                        @Html.HiddenFor(m => m.reservationFormSingle.Id)
                        <button type="submit" class="btn btn-info mt-4 ml-3">Submit</button>
                    }
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <table class="table table-hover table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Time</th>
                                <th scope="col">People</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReservationFormsList)
                            {
                            <tr>
                                <td>@item.ReservDate</td>
                                <td>@item.ReservTime</td>
                                <td>@item.ReservPeople</td>
                                <td>@item.ReservPhone</td>
                                <td>@item.ReservName</td>
                                <td>@item.ReservEmail</td>
                                <td><a href=@Url.Action("Edit",new { id= item.Id}) class="btn btn-info">Edit</a></td>
                                <td><a href=@Url.Action("Delete","ReservationFormCon",new { id=item.Id}) class="btn btn-info">Delete</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


