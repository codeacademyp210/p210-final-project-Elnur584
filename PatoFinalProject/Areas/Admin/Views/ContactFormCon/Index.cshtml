@model PatoFinalProject.Areas.ViewModel.ContactFormVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- MAIN CONTENT -->
<div class="dashboard-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <div class="row">
                <div class="col-12">
                    @using (Html.BeginForm(Model.Action, "ContactFormCon", FormMethod.Post))
                    {

                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.contactFormSingle.Name)
                            @Html.TextBoxFor(m => m.contactFormSingle.Name, new { @class = "form-control", placeholder = "Enter Name" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.contactFormSingle.Email)
                            @Html.TextBoxFor(m => m.contactFormSingle.Email, new { @class = "form-control", placeholder = "xxx@xxx.xxx" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.contactFormSingle.Phone)
                            @Html.TextBoxFor(m => m.contactFormSingle.Phone, new { @class = "form-control", placeholder = "+xxx xx xxx xx xx" })
                        </div>
                        <div class="col-12 form-group">
                            @Html.LabelFor(m => m.contactFormSingle.Description)
                            @Html.TextAreaFor(m => m.contactFormSingle.Description, new { @class = "form-control", placeholder = "dd/mm/yyyy" })
                        </div>
                        
                        @Html.HiddenFor(m => m.contactFormSingle.Id)
                        <button type="submit" class="btn btn-info mt-4 ml-3">Submit</button>
                    }
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12">
                    <table class="table table-hover table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Description</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model.contactFormsList)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Description</td>
                                    <td><a href=@Url.Action("Edit",new { id= item.Id}) class="btn btn-info">Edit</a></td>
                                    <td><a href=@Url.Action("Delete","ContactFormCon",new { id=item.Id}) class="btn btn-info">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


